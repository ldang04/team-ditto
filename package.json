{
  "name": "ditto",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npx ts-node-dev src/index.ts",
    "build": "npx tsc",
    "start:prod": "node dist/index.js",
    "dev": "npx tsc && node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest --runInBand",
    "test:unit": "jest --runInBand --coverage",
    "test:unit:junit": "jest --runInBand --coverage --reporters=default --reporters=jest-junit",
    "coverage:summary": "nyc report --reporter=text-summary",
    "api:test": "newman run postman/collection.json -e postman/env.json -r cli,htmlextra --reporter-htmlextra-export reports/postman-report.html",
    "reports:all": "npm run test:unit:junit && npm run api:test && npm run coverage:summary && node scripts/snapshot-coverage.js"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/vertexai": "^1.10.0",
    "@supabase/supabase-js": "^2.75.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "newman": "^6.2.1",
    "newman-reporter-htmlextra": "^1.23.1",
    "nyc": "^17.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5"
  }
}
